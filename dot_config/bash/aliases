# colors and short descriptors (e.g. */?)
alias ls='ls -F --color=auto'
# follow symlinks
alias cd='cd -P'
alias speed='speedometer -r enp7s0'
alias speedb='speedometer -r enp7s0 -t enp7s0'
alias instowl="xbps-install"
alias sinq="xbps-install -u"
alias mack="macchina"
alias gpg="gpg2"
alias pong="ping -c 20 gnu.org"
alias cop="xclip -selection clipboard"
alias no32="grep -v 32bit"

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias em="emacsclient --tty --socket-name=emacsd"
alias surch="xbps-query -Rs"
alias fuzzel="fuzzel -b 242424ff -t ebdbb2ff -B 0 -r 0 -S 504945ff -x 20 -y 12"

